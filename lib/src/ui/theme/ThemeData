import 'package:flutter/material.dart';

final ThemeData customTheme = ThemeData(
  // Màu chính của ứng dụng
  primaryColor: const Color(0xFFF291D8),
  
  // Sử dụng ColorScheme để quản lý màu sắc
  colorScheme: ColorScheme.fromSwatch().copyWith(
    primary: const Color(0xFFF291D8),
    secondary: const Color(0xFF2B88D9),
    background: const Color(0xFFF2C4E2),
    surface: const Color(0xFF2B96D9),
    onPrimary: Colors.white,
    onSecondary: Colors.white,
  ),

  // AppBar Theme
  appBarTheme: AppBarTheme(
    backgroundColor: const Color(0xFFF291D8),
    foregroundColor: Colors.white,
  ),

  // Button Theme
  buttonTheme: ButtonThemeData(
    buttonColor: const Color(0xFF2B96D9),
    textTheme: ButtonTextTheme.primary,
  ),
);